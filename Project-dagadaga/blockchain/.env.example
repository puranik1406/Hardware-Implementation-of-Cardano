# Environment Configuration for Blockchain Service
# Copy this file to .env and fill in your actual values

# Cardano Network Configuration
CARDANO_NETWORK=preprod
BLOCKFROST_PROJECT_ID=your_blockfrost_project_id_here
BLOCKFROST_BASE_URL=https://cardano-preprod.blockfrost.io/api/v0

# Masumi Network Configuration
MASUMI_NETWORK_URL=http://localhost:3001
MASUMI_API_KEY=your_masumi_api_key_here
MASUMI_TESTNET=true

# Payment Service Configuration
PAYMENT_SERVICE_HOST=localhost
PAYMENT_SERVICE_PORT=8000
MOCK_MODE=true

# Security
SECRET_KEY=your_secret_key_here_generate_a_secure_one
WALLET_ENCRYPTION_KEY=your_wallet_encryption_key_here

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development
DEBUG=true
ENABLE_CORS=true