# Example environment configuration
# Copy this to .env and update with your actual values

# Cardano Network Configuration
CARDANO_NETWORK=preprod
BLOCKFROST_PROJECT_ID=your_blockfrost_project_id_here
BLOCKFROST_BASE_URL=https://cardano-preprod.blockfrost.io/api/v0

# Masumi Network Configuration (Layer 2 Protocol)
MASUMI_NETWORK_URL=http://localhost:3001
MASUMI_API_KEY=your_masumi_api_key_here
MASUMI_TESTNET=true

# Service Ports Configuration
AGENT_A_PORT=8001
AGENT_B_PORT=8002
ROUTER_PORT=8003
PAYMENT_SERVICE_PORT=8000
WEB_DASHBOARD_PORT=5000

# Payment Service Configuration
PAYMENT_SERVICE_HOST=localhost
MOCK_MODE=true
ENABLE_REAL_BLOCKCHAIN=false

# AI Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
USE_MOCK_BEDROCK=true
FALLBACK_THRESHOLD=1000000

# Arduino Configuration
ARDUINO_A_PORT=COM3
ARDUINO_B_PORT=COM4
ARDUINO_BAUD_RATE=9600

# Security
SECRET_KEY=generate_your_own_secret_key_here
WALLET_ENCRYPTION_KEY=generate_your_own_encryption_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_FILE_LOGGING=true
LOG_FILE=cardano_arduino_system.log

# Development Settings
DEBUG=true
ENABLE_CORS=true
ENABLE_HOT_RELOAD=true

# Wallet Configuration
DEFAULT_WALLET_ADDRESS=your_cardano_testnet_address_here
COST_THRESHOLD=100.0
MIN_ADA_AMOUNT=1000000

# API Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
ENABLE_RATE_LIMITING=true