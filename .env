# Local environment for Cardano-Arduino-AI system
# Copy of .env.example with working values filled

# Cardano Network Configuration
CARDANO_NETWORK=preprod
BLOCKFROST_PROJECT_ID=preprod4cdqcEwOm0BdBbwGKaevFWTZnczoko1r
BLOCKFROST_BASE_URL=https://cardano-preprod.blockfrost.io/api/v0

# Masumi (optional, external quickstart)
MASUMI_NETWORK_URL=http://localhost:3001
MASUMI_API_KEY=
MASUMI_TESTNET=true

# Service Ports Configuration
AGENT_A_PORT=8001
AGENT_B_PORT=8002
ROUTER_PORT=8003
PAYMENT_SERVICE_PORT=8000
WEB_DASHBOARD_PORT=5000

# Payment Service Configuration
PAYMENT_SERVICE_HOST=localhost
MOCK_MODE=false
ENABLE_REAL_BLOCKCHAIN=true

# Arduino Configuration
ARDUINO_A_PORT=COM3
ARDUINO_B_PORT=COM4
ARDUINO_BAUD_RATE=9600

# Security
SECRET_KEY=change_me_secret
WALLET_ENCRYPTION_KEY=change_me_encrypt

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_FILE_LOGGING=true
LOG_FILE=cardano_arduino_system.log

# Development Settings
DEBUG=true
ENABLE_CORS=true
ENABLE_HOT_RELOAD=true

# Wallet Configuration
DEFAULT_WALLET_ADDRESS=
COST_THRESHOLD=100.0
MIN_ADA_AMOUNT=1000000
