{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Agent Response Schema",
  "description": "Schema for responses from agents regarding payment offers",
  "required": ["response_id", "offer_id", "from_agent", "status", "timestamp"],
  "properties": {
    "response_id": {
      "type": "string",
      "description": "Unique identifier for the response",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "offer_id": {
      "type": "string",
      "description": "ID of the original offer being responded to"
    },
    "from_agent": {
      "type": "string",
      "description": "ID of the agent sending the response",
      "enum": ["agent_a", "agent_b"]
    },
    "status": {
      "type": "string",
      "description": "Response status",
      "enum": ["accepted", "rejected", "pending", "expired"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when response was created"
    },
    "message": {
      "type": "string",
      "description": "Optional message from the responding agent",
      "maxLength": 1000
    },
    "transaction_details": {
      "type": "object",
      "description": "Transaction details if offer was accepted",
      "properties": {
        "tx_hash": {
          "type": "string",
          "description": "Blockchain transaction hash",
          "pattern": "^[a-fA-F0-9]{64}$"
        },
        "block_height": {
          "type": "integer",
          "description": "Block height where transaction was confirmed",
          "minimum": 0
        },
        "confirmation_time": {
          "type": "string",
          "format": "date-time",
          "description": "When transaction was confirmed"
        },
        "fees": {
          "type": "number",
          "description": "Transaction fees paid",
          "minimum": 0
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for the response",
      "properties": {
        "processing_time_ms": {
          "type": "number",
          "description": "Time taken to process the offer in milliseconds"
        },
        "arduino_notified": {
          "type": "boolean",
          "description": "Whether Arduino B was notified of the response"
        },
        "error_code": {
          "type": "string",
          "description": "Error code if status is rejected"
        }
      }
    }
  }
}
